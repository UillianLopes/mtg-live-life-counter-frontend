{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mtg-live-life-counter/core": ["libs/core/src/index.ts"],
      "@mtg-live-life-counter/features/home": [
        "libs/features/home/src/index.ts"
      ],
      "@mtg-live-life-counter/features/main": [
        "libs/features/main/src/index.ts"
      ],
      "@mtg-live-life-counter/features/room": [
        "libs/features/room/src/index.ts"
      ],
      "@mtg-live-life-counter/features/sign-in": [
        "libs/features/sign-in/src/index.ts"
      ],
      "@mtg-live-life-counter/features/sign-up": [
        "libs/features/sign-up/src/index.ts"
      ],
      "@mtg-live-life-counter/shared": ["libs/shared/src/index.ts"],
      "@mtg-live-life-counter/stores/authentication": [
        "libs/stores/authentication/src/index.ts"
      ],
      "@mtg-live-life-counter/stores/room": ["libs/stores/room/src/index.ts"],
      "@mtg-live-life-counter/testing": ["libs/testing/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
